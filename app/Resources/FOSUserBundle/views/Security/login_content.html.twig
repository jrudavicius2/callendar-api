{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="alert alert-danger">
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    </div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="form-group row">
        <label class="col-md-2 col-form-label" for="username">{{ 'security.login.username'|trans }}</label>
        <div class="col-md-10">
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-md-2 col-form-label" for="password">{{ 'security.login.password'|trans }}</label>
        <div class="col-md-10">
            <input type="password" id="password" name="_password" required="required" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-md-2 col-form-label" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        <div class="col-md-10">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        </div>
    </div>

    <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
</form>
