{% extends '@App/base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block page_title %}{{ title }}{% endblock %}

{% block body %}
    {% if categories|length > 0 %}
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                    <tr>
                        <th scope="row">{{ category.getId }}</th>
                        <td>
                            {{ category.getName }}
                        </td>
                        <td>
                            <a class="d-inline" href="{{ path('front_category_edit', {'id': category.getId }) }}">
                                <img src="{{ asset('svg/edit.svg') }}" width="25" height="25" alt="Edit category">
                            </a>
                            <form class="d-inline" action="{{ path('front_category_delete', {'id': category.getId }) }}" method="POST">
                                <input type="hidden" name="_method" value="DELETE">
                                <input class="garbage-icon align-middle" type="image" src="{{ asset('svg/garbage.svg') }}" width="25" height="25">
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        No categories
    {% endif %}
{% endblock %}
